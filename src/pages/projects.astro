---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";
---

<BaseLayout>
    <h2 class="text-3xl font-bold mb-6">Projects</h2>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <ProjectCard
            title="Autonomous Inspection Robot"
            description="Designed a mobile robotic system for structural inspection using computer vision and embedded AI."
            link="https://github.com/random/robot-project"
        />

        <ProjectCard
            title="IoT Environmental Monitoring Platform"
            description="Led the development of a sensor network and data analytics platform used in university research."
            link="https://github.com/random/iot-platform"
        />

        <ProjectCard
            title="Industrial Automation Workflow"
            description="Project managed automation upgrades for a manufacturing line, increasing throughput by 23%."
            link="https://github.com/random/automation-workflow"
        />
    </div>
</BaseLayout>
